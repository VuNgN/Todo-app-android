<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="transparent">
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <size
                android:width="100dp"
                android:height="100dp" />
            <stroke
                android:width="1dp"
                android:color="@color/primary_variant" />
        </shape>
        <scale android:scaleGravity="fill" />
    </item>
    <item>
        <shape android:shape="oval">
            <size
                android:width="140dp"
                android:height="140dp" />
            <solid android:color="@color/primary_variant" />
        </shape>
        <scale android:scaleGravity="fill" />
    </item>
    <item android:drawable="@drawable/ic_round_check_24" />
</layer-list>