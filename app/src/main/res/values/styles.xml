<resources>

    <style name="Widget.Theme.TodoApp.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.TodoApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="CustomSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/primary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/airbnbcereal_w_bk</item>
        <item name="android:fontFamily">@font/airbnbcereal_w_bk</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/airbnbcereal_w_bk</item>
        <item name="android:fontFamily">@font/airbnbcereal_w_bk</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnSurface">@color/primary_variant</item>
        <item name="colorError">@color/color_error</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="android:editTextStyle">@drawable/corner_edit_text_authentication</item>
    </style>

    <style name="customTabLayoutHome" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearanceHome</item>
    </style>

    <style name="TabTextAppearanceHome" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="customTabLayoutTracker" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearanceTracker</item>
    </style>

    <style name="TabTextAppearanceTracker" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:lines">2</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CalendarViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/primary</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="selectedDotColor">@color/primary</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="color">@color/white</item>
    </style>

    <style name="CalendarViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/calendar_date_text_normal</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="CalendarViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>